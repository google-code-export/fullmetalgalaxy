<?xml version="1.0" encoding="UTF-8"?>
<taglib>
<tlibversion>1.0</tlibversion>
<jspversion>1.1</jspversion>
<shortname>substr</shortname>
<info>Sample taglib for Substr operation</info>
<uri>http://www.fullmetalgalaxy.com</uri>
<tag>
    <name>resource</name>
    <tagclass>com.fullmetalgalaxy.server.taglib.TagResource</tagclass>
    <info>get string from a resource file.</info>
    <attribute>
      <name>key</name>
      <required>true</required>
  </attribute>
</tag>
<tag>
    <name>localize</name>
    <tagclass>com.fullmetalgalaxy.server.taglib.TagLocalize</tagclass>
    <info>localize a given path by adding '_en' before file extention.</info>
    <attribute>
      <name>path</name>
      <required>true</required>
  </attribute>
</tag>
<tag>
    <name>include</name>
    <tagclass>com.fullmetalgalaxy.server.taglib.TagInclude</tagclass>
    <info>include a given path by adding '_en' before file extention.</info>
    <attribute>
      <name>page</name>
      <required>true</required>
  </attribute>
</tag>
<tag>
    <name>locale</name>
    <tagclass>com.fullmetalgalaxy.server.taglib.TagLocale</tagclass>
    <info>get user locale</info>
</tag>
</taglib>
